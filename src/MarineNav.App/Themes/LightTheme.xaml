<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Light Theme Colors -->
    
    <!-- Core Color Definitions (matching structure with Dark Theme) -->
    <SolidColorBrush x:Key="ColorPrimaryBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ColorSecondaryBackground" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="ColorSurface" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ColorTextPrimary" Color="#000000"/>
    <SolidColorBrush x:Key="ColorTextSecondary" Color="#666666"/>
    
    <!-- Background Colors -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ContentBackgroundBrush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="AlternateRowBackgroundBrush" Color="#F9F9F9"/>
    
    <!-- Text Colors -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#000000"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#666666"/>
    <SolidColorBrush x:Key="HeaderTextBrush" Color="#1a1a1a"/>
    
    <!-- Border Colors -->
    <SolidColorBrush x:Key="BorderBrush" Color="#CCCCCC"/>
    <SolidColorBrush x:Key="FocusBorderBrush" Color="#0078D4"/>
    
    <!-- Control Colors -->
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#D0D0D0"/>
    <SolidColorBrush x:Key="ButtonPressedBrush" Color="#C0C0C0"/>
    
    <!-- DataGrid Colors -->
    <SolidColorBrush x:Key="DataGridHeaderBrush" Color="#E8E8E8"/>
    <SolidColorBrush x:Key="DataGridBorderBrush" Color="#CCCCCC"/>
    <SolidColorBrush x:Key="DataGridSelectionBrush" Color="#CCE8FF"/>
    
    <!-- Accent Colors -->
    <SolidColorBrush x:Key="AccentBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="#107C10"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FF8C00"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#D13438"/>
    
    <!-- Tab Control Colors -->
    <SolidColorBrush x:Key="TabBackgroundBrush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="TabSelectedBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TabHoverBrush" Color="#E8E8E8"/>
    
    <!-- ComboBoxItem Style -->
    <Style TargetType="ComboBoxItem">
        <Setter Property="Background" Value="White"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="Padding" Value="5"/>
        <Style.Triggers>
            <Trigger Property="IsHighlighted" Value="True">
                <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                <Setter Property="Foreground" Value="White"/>
            </Trigger>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                <Setter Property="Foreground" Value="White"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Calendar Styles -->
    <Style TargetType="Calendar">
        <Setter Property="Background" Value="White"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
    </Style>
    
    <Style TargetType="CalendarDayButton">
        <Setter Property="Background" Value="White"/>
        <Setter Property="Foreground" Value="Black"/>
        <Style.Triggers>
            <Trigger Property="IsToday" Value="True">
                <Setter Property="Background" Value="#CCE8FF"/>
            </Trigger>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                <Setter Property="Foreground" Value="White"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <Style TargetType="CalendarButton">
        <Setter Property="Background" Value="White"/>
        <Setter Property="Foreground" Value="Black"/>
    </Style>
    
</ResourceDictionary>
